@model IEnumerable<Parcker.Models.OrdemServicoModel>
@{
    ViewBag.Title = "Ordem de Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/plugin/dtable/css")
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Atendimentos</h1>
    <p class="mb-4">Todas as ordens de serviço e orçamentos gerados em ordem decrescente.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 text-right">
            <a href="@Url.Action("Edit", new { tipo = 1 })" class="btn btn-success"><i class="fa fa-wrench"></i>&nbsp;Nova Ordem de Serviço</a>
            <a href="@Url.Action("Edit", new { tipo = 2 })" class="btn btn-info ml-2"><i class="fa fa-file-alt"></i>&nbsp;Novo Orçamento</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- Page level plugins -->
    @Scripts.Render("~/plugin/dtable/js")

    <!-- Page level custom scripts -->
    @Scripts.Render("~/views/ordemservico/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-ordem-servico").addClass("active");
        });
    </script>
}