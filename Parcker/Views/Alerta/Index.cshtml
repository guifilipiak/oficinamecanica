@model IEnumerable<Parcker.Models.AlertaModel>
@{
    ViewBag.Title = "Alertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/plugin/dtable/css")
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Alerta <span class="badge badge-info">BETA</span></h1>
    <p class="mb-4">Você pode agendar alerta de troca de óleo ou revisões preventivas em um periodo de tempo, quando chegar na data agendada o sistema enviará um e-mail para o proprietário do veículo.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 text-right">
            <a href="@Url.Action("Edit")" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Cadastrar Novo Alerta</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTableAlerta" width="100%" cellspacing="0">
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/plugin/dtable/js")

    <!-- Page level custom scripts -->
    @Scripts.Render("~/views/alerta/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-alerta").addClass("active");
        });
    </script>
}