@model IEnumerable<Parcker.Models.VeiculoModel>
@{
    ViewBag.Title = "Veículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/plugin/dtable/css")
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Veículos</h1>
    <p class="mb-4">Dê entrada nos veículos antes de lançar novas OS's, você vai precisar informá-lo e vinculá-lo ao proprietário (cliente).<a target="_blank" href="@Url.Action("Index","Cliente")" class="btn btn-sm btn-link"><i class="fa fa-plus-circle"></i>&nbsp;Novo Cliente</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 text-right">
            <a href="@Url.Action("Edit")" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Cadastrar Novo Veículo</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- Page level plugins -->
    @Scripts.Render("~/plugin/dtable/js")

    <!-- Page level custom scripts -->
    @Scripts.Render("~/views/veiculo/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-veiculo").addClass("active");
        });
    </script>
}