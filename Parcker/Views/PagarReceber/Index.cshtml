@model Parcker.Models.PagarReceberModel
@{
    ViewBag.Title = "Pagar e Receber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/plugin/dtable/css")
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Pagar e Receber</h1>
    <p class="mb-4">Gerencie suas entradas e saídas e acompanhe o fluxo de caixa no dashboard da tela inicial.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header">
            <form id="formFilter">
                <div class="row">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.IdTipoConta, htmlAttributes: new { @class = "control-label" })
                        @Html.EnumDropDownListFor(model => model.IdTipoConta, "Pagar e Receber", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.DataPagamento, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.DataPagamento, new { @class = "form-control date" })
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.IdFormaPagamento, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.IdFormaPagamento, ViewBag.FormaPagamento as IEnumerable<SelectListItem>, "Todas", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-2 pt-1">
                        <button type="submit" class="btn btn-block btn-primary mt-4"><i class="fa fa-filter"></i>&nbsp;Filtrar</button>
                    </div>
                    <div class="form-group col-md-2 pt-1">
                        <a href="@Url.Action("Edit")" class="btn btn-block btn-success mt-4"><i class="fa fa-plus"></i>&nbsp;Lançamento</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- Page level plugins -->
    @Scripts.Render("~/plugin/dtable/js")

    <!-- Page level custom scripts -->
    @Scripts.Render("~/views/pagarreceber/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#menu-pagar-receber").addClass("active");
        });
    </script>
}